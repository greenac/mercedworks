
div(id='banner_blurry')
    div(id='profile_container', ng-controller='profileController')
        a(id='back', href='#/', class='stretchLeft') x
        div(id = 'day_container' class = "container")
            div(class = "row")
                a(href = "#")
                    div(class="col-xs-4 day", id="intro")
                        img(src="images/icons/people.png")
                        <h4>Intro</h4>
                a(href = "#")
                    div(class = 'col-xs-4 day', id="work")
                        img(src='images/icons/work.png')
                        <h4>Work</h4>
                a(href = "#")
                    div(class = 'col-xs-4 day', id="plans")
                        img(src='images/icons/plans.png')
                        <h4>Plans</h4>
        div(class='row')
            div(class='col-md-6')
                img(img ng-src="{{profile.pic}}" class="portrait")
            div(class='col-md-6')
                img(src='images/mwlogo.png', class='profile_logo')
                h1 {{profile.firstName + ' ' + profile.lastName}}
                h1 {{profile.occupation + ' at ' + profile.business}}
                h4 {{profile.text}}  
